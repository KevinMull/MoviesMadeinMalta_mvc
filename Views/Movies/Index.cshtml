<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleYear)
            </th>
            <th>
                Locations
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <a asp-action="Details" asp-route-id="@item.TitleId" asp-route-title="@item.Title">@item.Title</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationPlacesCommaSeparated)
                </td>


                <td>
                    <a href="@item.ImdbUrl" target="_blank"><img src="/images/icons/imdb.png" alt=""></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{


    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#title").autocomplete({
                source: "/api/movies/search"
                
                
                ,minLength: 3               
            })

        })
    </script>
}