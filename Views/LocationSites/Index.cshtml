@model IEnumerable<MaltaMoviesMVCcore.Models.LocationSite>

@{
    ViewData["Title"] = "Movie Locations";
}


<h2 class="movie-title">Movies Locations&nbsp; &nbsp;  </h2>
<div class="search-box">
    <form asp-controller="LocationSites" asp-action="Index" method="get">      
            Search: <input type="text" id="txtSearch" name="SearchString">
            <input type="submit" value="submit" />
     
    </form>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    }

    @{ string search = Context.Request.Query["SearchString"];
        if (search != null)
        {
            <p>Results for '@search'. @Model.Count() record(s) found</p>;

        }
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LocationPlaceAndSiteName)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.LocationPlace)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LocationSiteName)
                    </th>*@


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.LocationSiteId">@item.LocationPlaceAndSiteName</a>
                        @Html.DisplayFor(modelItem => item.LocationPlaceAndSiteName)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.LocationPlace.LocationPlaceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationSiteName)
                        </td>*@

                </tr>
            }
        </tbody>
    </table>
